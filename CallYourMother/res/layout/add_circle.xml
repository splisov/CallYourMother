<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D5E4EB"
    android:orientation="vertical" >

        <TextView
            android:id="@+id/circleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Circle Name" 
            android:textSize="20dp"/>
        
       <EditText
	        android:id="@+id/circleText"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:ems="10" >
	        <requestFocus />
	    </EditText>
	    
        <TextView
            android:id="@+id/intervalLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reminder Interval" 
           	android:paddingTop="15dp"
            android:textSize="20dp"/>

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        
          <TextView
            android:id="@+id/ContactsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contacts" 
           	android:paddingTop="15dp"
            android:textSize="20dp"/>
          
          <TextView 
              android:id="@+id/contactListView"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="30dp"
              android:text="placeholder for contact list"/>
           
           <TextView 
              android:id="@+id/contactListView"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:textSize="30dp"
              android:paddingBottom="20dp"
              android:text="+"/>
          
<LinearLayout
     android:layout_width="match_parent"
    android:layout_height="match_parent">
          <Button
              android:id="@+id/submit"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Submit" />
          
          <Button
              android:id="@+id/reset"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Reset" />
</LinearLayout>
</LinearLayout>
