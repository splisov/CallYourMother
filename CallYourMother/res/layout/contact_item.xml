<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#D5E4EB"
    android:padding="10dp">
        
    <ImageView 
        android:id="@+id/contact_image_view"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
   
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        
               <RelativeLayout
        android:id="@+id/info_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
	        <TextView 
			    android:id="@+id/contact_name_view"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:paddingRight="5dp"
			    android:textSize="20dp"
			    android:textColor="#000000"
			    android:text="Joe Shmoe"/>  
			    
	     
	        
	        <TextView
			    android:id="@+id/delete_contact_view"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentRight="true"
			    android:textSize="20dp"
			    android:textColor="#ff0000"
			    android:text=""/>
			    
         </RelativeLayout>
        
        
        
    
			    
      
		
        <TextView
		    android:id="@+id/contact_number_view"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="000-000-0000"/>
        
    </LinearLayout>
    	
   
    </LinearLayout>